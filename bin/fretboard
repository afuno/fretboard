#!/usr/bin/env ruby
# frozen_string_literal: true

abort 'Please run fretboard from the root of the project' unless File.exist?('./Gemfile')

require 'rubygems'

begin
  require 'bundler'
  Bundler.setup
rescue StandardError
  # ...
end

$LOAD_PATH << "#{__dir__}/../lib"

require 'fretboard/parser'

Fretboard::Parser.parse(ARGV)
